{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/Debug/main.exe",
            "args": [
                "--filename",
                "${input:yeetFileToRun}"
            ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/main",
            "args": ["--filename", "${input:yeetFileToRun}"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        
    ],
    "inputs": [
        {
            "id": "yeetFileToRun",
            "type": "pickString",
            "description": "Select the .yeet file to run",
            "options": [
                "sexpr/test0_int_arithmatic.yeet",
                "sexpr/test1_int_assignment.yeet",
                "sexpr/test2_float_arithmatic.yeet",
                "sexpr/test3.yeet",
                "sexpr/test3_cond.yeet",
                "sexpr/test4_while.yeet",
                "sexpr/test5_functions.yeet",
                "sexpr/test6_bitwidths.yeet",
                "sexpr/test7_structs.yeet",
                "sexpr/test8_pointers.yeet"
            ],
            "default": "sexpr/test1_int_assignment.yeet"
        }
    ]
}