{
  "version": 2,
  "configurePresets": [
    {
      "name": "windows-vcpkg",
      "binaryDir": "${sourceDir}/build",
      "generator": "Visual Studio 17 2022",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "conditions": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "ninja-vcpkg",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "conditions": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}